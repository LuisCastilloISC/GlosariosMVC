
@model Glosarios.Models.Usuario

@{
    ViewData["Title"] = "Crear";
}
<link type="text/css" rel="stylesheet" href="https://localhost:44381/css/Registrar.css" />
<h4>Crea tu usuario</h4>
        <form id="frmCrear">
            <div class="form-group">
                <label for="CCorreo" id="lblCorreo" class="control-label">Correo</label>
                <input name="CCorreo" id="CCorreo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CNombre" id="lblNombre" class="control-label">Nombre</label>
                <input name="CNombre" id="CNombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CApellidoPat" id="lblApp" class="control-label">Apellido paterno</label>
                <input name="CApellidoPat" id="CApellidoPat" class="form-control" />
                <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CApellidoMat" id="lblApm"class="control-label">Apellido materno</label>
                <input name="CApellidoMat" id="CApellidoMat" class="form-control" />
                <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label for="CNickname" id="lblNick" class="control-label">NickName</label>
                <input name="CNickname" id="CNickname" class="form-control" />
                <span asp-validation-for="NickName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CPassword" id="lblPass" class="control-label">Password</label>
                <input type="password" name="CPassword" id="CPassword" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="button" value="Crear usuario" class="btn btn-default" onclick="CrearUsuario('CrearUsuario')">Crear cuenta</button>
            </div>
        </form>



