
@model Glosarios.Models.Usuario

@{
    ViewData["Title"] = "Crear";
}

<h2>Create</h2>
<h4>Usuario</h4>
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="CCorreo" class="control-label">Correo</label>
                <input name="CCorreo" id="CCorreo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CNombre" class="control-label">Nombre</label>
                <input name="CNombre" id="CNombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CApellidoPat" class="control-label">Apellido paterno</label>
                <input name="CApellidoPat" id="CApellidoPat" class="form-control" />
                <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CApellidoMat" class="control-label">Apellido materno</label>
                <input name="CApellidoMat" id="CApellidoMat" class="form-control" />
                <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label for="CNickname" class="control-label">NickName</label>
                <input name="CNickname" id="CNickname" class="form-control" />
                <span asp-validation-for="NickName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CPassword" class="control-label">Password</label>
                <input name="CPassword" id="CPassword" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="button" value="Crear usuario" class="btn btn-default" onclick="CrearUsuario('CrearUsuario')">Crear cuenta</button>
            </div>
        </form>
    </div>
</div>

<div>
