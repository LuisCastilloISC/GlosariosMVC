@model Glosarios.Models.Usuario

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="LCorreo" class="control-label">Correo</label>
                <input name="LCorreo" id="LCorreo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LPassword" class="control-label">Password</label>
                <input name="LPassword" id="LPassword" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="button" value="Entrar" class="btn btn-default" onclick="Loguear('Loguear')">Log in</button>
            </div>
        </form>
    </div>
</div>
